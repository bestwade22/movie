

<div class="row">
  <div class="col-md-12 h1">{{detail.title}} ({{{trimString detail.release_date 0 4}}})</div>
  <div class="col-md-12"><h4>{{detail.runtime}}min / {{#each detail.genres}}<a href="/">{{this.name}}</a>  {{/each}} / {{detail.release_date}}</h4>
  </div>
</div>
<br>
<div class="row">
  <!--<img  class="col-md-5 col-xs-12" src="http://image.tmdb.org/t/p/w500{{detail.poster_path}}" alt="">-->
  <div class="col-md-7 col-xs-12">
     <div class="row ">
         <div class="col-md-8 col-xs-12 h4">Director:<h3>{{director}}</h3></div>
         
         <div class="col-md-8 col-xs-12 h4">Writer:<h3>{{writer}}</h3></div>
         
         <div class="col-md-8 col-xs-12 h4">Cast:<h3>{{cast}}</h3></div><br><br>
         <div class="col-md-8 col-xs-12 h3">{{detail.overview}}</div>
     </div>
  </div>
  
</div>
<div class="row">
     <div class="col-md-12 col-xs-12"> <h1>RATING: {{detail.vote_average}}/10</h1></div>
     <div class="col-md-12 col-xs-12"> <h2>Reviews:</h2></div><br>
     {{#each reviews}}
     <div class="col-md-8 col-xs-12"><u><h4>{{this.author}}:</h4></u></div>
     <div class="col-md-8 col-xs-12"><h4>{{this.content}}</h4><br></div>
     {{/each}}    
      <div class="col-md-12 col-xs-12"> <h1>HD Movie Trailers:</h1></div>
      {{#each trailers}}
       <div class="col-md-12 col-xs-12">
            <div class="embed-responsive embed-responsive-16by9"><iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{this.source}}" allowfullscreen></iframe></div><br><br>
      </div>
      {{/each}}
</div>

